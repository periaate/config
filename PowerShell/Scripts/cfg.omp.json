{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"var": {
		"A": "C:",
		"B": ""
	},
	"palette": {
		"black": "#282c34",
		"red": "#BF5656",
		"green": "#7ca684",
		"yellow": "#b3a786",
		"blue": "#61afef",
		"magenta": "#80a286",
		"cyan": "#7CA684",
		"white": "#c2bfa9",
		"foreground": "#c7c7b6",
		"background": "#282c34"
	},
	"blocks": [
		{
			"alignment": "left",
			"segments": [
				{
					"properties": {
						"branch_icon": "",
						"fetch_status": true,
						"fetch_stash_count": true,
						"fetch_worktree_count": true
					},
					"style": "plain",
					"template": "<p:yellow>[</>{{ if or (.Working.Changed) (.Staging.Changed) (gt .StashCount 0) }}<p:magenta>{{ .HEAD }}</>{{ else }}<p:green>{{ .HEAD }}</>{{ end }}{{ if (gt .Ahead 0)}}<p:cyan>{{ .BranchStatus }}</>{{ end }} <p:cyan>{{ .BranchStatus }}</> {{ if .Staging.Changed }} <p:green>{{ .Staging.String }}</>{{ end }}{{ if .Working.Changed }} <p:red>{{ .Working.String }}</>{{ end }}<p:yellow>]</> ",
					"type": "git"
				},

				{
					"foreground": "#C7C7B6",
					"properties": {
						"style": "full",
						"folder_separator_icon": "/"
					},
					"style": "plain",
					"template": "{{ replaceP .Var.A .Path .Var.B }}",
					"type": "path"
				}

			],
			"type": "prompt"
		},

		{
			"alignment": "left",
			"newline": true,
			"segments": [
				{
					"style": "plain",
					"template": ">",
					"type": "text"
				}
			],
			"type": "prompt"
		}
	],
	"final_space": true,
	"version": 2
}
